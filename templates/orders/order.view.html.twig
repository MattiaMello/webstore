<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Webstore - orders
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
																						           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}

			<meta charset="utf-8">
			<meta content="width=device-width, initial-scale=1.0" name="viewport"/>
			<meta
			http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
			<!--     Fonts and icons     -->
			<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons"/>
			<link
			rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
			<!-- Material Kit CSS -->

			{{ encore_entry_link_tags('site') }}

		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		{% block body %}

			<div class="wrapper ">
				<div
					class="sidebar" data-color="purple" data-background-color="white">
					<!--
																				                        Tip 1: You can change the color of the sidebar using: data-color="purple | azure | green | orange | danger"
																				                
																				                        Tip 2: you can also add an image using data-image tag
																				                    -->
					<div
						class="logo"><!-- the logo goes here -->
					</div>
					<div class="sidebar-wrapper">
						<ul class="nav">
							<li class="nav-item ">
								<a class="nav-link" href="/product">
									<i class="material-icons">products</i>
									<p>products</p>
								</a>
							</li>
							<li class="nav-item active ">
								<a class="nav-link" href="/order">
									<i class="material-icons">orders</i>
									<p>Orders</p>
								</a>
							</li>
							<!-- your sidebar here -->
						</ul>
					</div>
				</div>
				<div
					class="main-panel">
					<!-- Navbar -->
					<nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
						<div class="container-fluid">
							<div class="navbar-wrapper">
								<a class="navbar-brand" href="javascript:;">Order detail edit</a>
							</div>
							<button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
								<span class="sr-only">Toggle navigation</span>
								<span class="navbar-toggler-icon icon-bar"></span>
								<span class="navbar-toggler-icon icon-bar"></span>
								<span class="navbar-toggler-icon icon-bar"></span>
							</button>
						</div>
					</nav>
					<!-- End Navbar -->
					<div class="content">
						<div
							class="container-fluid">
							<!-- your content here -->
							<form action="/order/edited/{{ data.orderID }}" method="post">
								<div class="row">
									<div class="col">
										<input type="text" class="form-control" id="total" name="total" value="{{ data.total }}">
									</div>
									<div class="col">
										<input type="text" class="form-control" id="orderDate" name="orderDate" value="{{ data.orderDate }}">
									</div>
									<div class="col">
										<input type="text" class="form-control" id="status" name="status" value="{{ data.status }}">
									</div>
									<div class="col">
										<input type="text" class="form-control" id="locale" name="locale" value="{{ data.locale }}">
									</div>
								</div>
								<br>
								<button class="btn">
									<a href="/order">Cancel</a>
								</button>
								<input type="submit" value="Save" class="btn btn-primary">
							</form>
						</div>
					</div>
					<footer class="footer">
						<div class="container-fluid">
							<nav class="float-left">
								<ul>
									<li><a href="https://www.mattiamello.net">Tia</a></li>
								</ul>
							</nav>
							<div class="copyright float-right">
								&copy;
								<script>
									document.write(new Date().getFullYear())
								</script>, made by
								<a href="https://www.mattiamello.net" target="_blank">Tia</a>
								for testing purpose.
							</div>
							<!-- your footer here -->
						</div>
					</footer>
				</div>
			</div>

		{% endblock %}
	</body>
</html>
